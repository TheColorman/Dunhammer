{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-extra-parens": "error",
        "no-multi-spaces": ["error", {
            "ignoreEOLComments": true
        }],
        /*"camelcase": "warn",*/
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "ignoreComments": true
        }],
        "prefer-const": "error",
        "no-unused-vars": "error",
        "operator-assignment": "error",
        "one-var": ["error", "consecutive"]
    }
}